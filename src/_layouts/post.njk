---
layout: base.njk
---

<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
            {{ date | dateDisplay }}
        </div>
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>