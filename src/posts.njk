---
layout: base.njk
title: All Posts
---

<div class="posts-layout">
    <aside class="sidebar">
        <h3>Categories</h3>
        <div class="category-filters">
            {# ... sidebar links are fine ... #}
        </div>
    </aside>
    
    <div class="posts-content">
        <div class="posts-list">
            {% for post in collections.posts | reverse %}
            <article class="post-card" data-category="{{ post.data.category | slugify }}">
                {# Apply the url filter to post.url #}
                <h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
                <div class="post-meta">
                    {{ post.date | dateDisplay }}
                </div>
                {% if post.data.excerpt %}
                <p class="post-excerpt">{{ post.data.excerpt }}</p>
                {% endif %}
                {% if post.data.category %}
                <span class="post-category">{{ post.data.category }}</span>
                {% endif %}
            </article>
            {% endfor %}
        </div>
    </div>
</div>