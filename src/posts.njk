---
layout: base.njk
title: All Posts
---

<div class="posts-layout">
    <aside class="sidebar">
        <h2>Categories</h2>
        <div class="category-filters">
            <a href="#" class="category-filter active" data-category="all">All Posts</a>
            <a href="#" class="category-filter" data-category="academic">Academic</a>
            <a href="#" class="category-filter" data-category="technology">Technology</a>
            <a href="#" class="category-filter" data-category="essays">Essays</a>
            <a href="#" class="category-filter" data-category="book-summaries">Book Summaries</a>
            <a href="#" class="category-filter" data-category="poetry-fiction">Poetry/Fiction</a>
            <a href="#" class="category-filter" data-category="extracurriculars">Extracurriculars</a>
        </div>
    </aside>
    
    <div class="posts-content">
        <div class="posts-list">
            {% for post in collections.posts | reverse %}
            <article class="post-card" data-category="{{ post.data.category | lower | replace(' ', '-') }}">
                <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                <div class="post-meta">
                    {{ post.date | dateDisplay }}
                </div>
                {% if post.data.excerpt %}
                <p class="post-excerpt">{{ post.data.excerpt }}</p>
                {% endif %}
                {% if post.data.category %}
                <span class="post-category">{{ post.data.category }}</span>
                {% endif %}
            </article>
            {% endfor %}
        </div>
    </div>
</div>